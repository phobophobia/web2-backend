<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
    </encoder>
  </appender>
  
  <appender name="LOGFILE" class="ch.qos.logback.core.FileAppender">
    <file>${JBOSS_HOME}/tilos.log</file>
    <append>true</append>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>    
  </appender>

  <appender name="LOGFILE-ACCESS" class="ch.qos.logback.core.FileAppender">
    <file>${JBOSS_HOME}/tilos-access.log</file>
    <append>true</append>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
    
  </appender>

  <appender name="ASYNCX" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="LOGFILE"/>
  </appender>

  <root level="INFO">
    <appender-ref ref="LOGFILE"/>
    <appender-ref ref="STDOUT"/>
  </root>

  <logger name="hu.tilos.radio.backend.LoggingFilter" leve="DEBUG">
     <appender-ref ref="LOGFILE-ACCESS"/>
  </logger>
</configuration>
