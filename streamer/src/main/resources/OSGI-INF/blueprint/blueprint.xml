<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xsi:schemaLocation="
  http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <cm:property-placeholder persistent-id="hu.tilos.radio" >

    </cm:property-placeholder>


    <reference id="entityManagerFactory" interface="javax.persistence.EntityManagerFactory" availability="mandatory"
               filter="(osgi.unit.name=tilos)">

    </reference>


    <bean id="backend" class="hu.tilos.radio.backend.streamer.LocalBackend">
        <property name="root" value="${archive.path}"></property>
        <property name="throttleLimit" value="${stream.throttle}"></property>
    </bean>

    <service interface="javax.servlet.http.HttpServlet">
        <service-properties>
            <entry key="alias" value="/mp3"/>
        </service-properties>
        <bean class="hu.tilos.radio.backend.StreamController">
            <property name="backend" ref="backend"></property>
            <property name="serverUrl" value="${server.url}"></property>
        </bean>
    </service>


    <service interface="javax.servlet.Filter">
        <service-properties>
            <entry key="filter-name" value="logging"/>
            <entry key="servletNames">
                <array value-type="java.lang.String">
                    <value>debug-filter</value>
                </array>
            </entry>
            <entry key="urlPatterns">
                <array value-type="java.lang.String">
                    <value>/mp3/*</value>
                </array>
            </entry>
        </service-properties>
        <bean class="hu.tilos.radio.backend.DebugLogFilter"/>
    </service>


</blueprint>